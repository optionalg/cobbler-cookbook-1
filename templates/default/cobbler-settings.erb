<% node[:cobbler][:settings].each do |key, value| -%>
<%  if value.kind_of? Array -%>
<%    value.each do |item| -%>
<%=     "#{key}: #{item}" %>
<%    end -%>
<%  elsif value.kind_of? Hash -%>
<%=   "#{key}:"%>
<%    value.each do |item_key, item_value| -%>
<%=     "#{item_key}: #{item_value}" %>
<%    end -%>
<%  else -%>
<%=   "#{key}: #{value}"%>
<%  end -%>
<% end -%>
